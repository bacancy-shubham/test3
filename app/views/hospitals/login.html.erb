<div class="container" style="margin: auto;width: 50%;border: 3px solid green;padding: 10px;text-align: center;">
  <%= form_with model: @user, url: hospitals_create_path, html: {method: :post} do |user_form| %>
  <div class="form-group row">
    <%= user_form.label :email, class: 'col-sm-4' %>
    <%= user_form.text_field :email, class: 'col-sm-8' %>
  </div>
  <div class="form-group row">
    <%= user_form.label :password, class: 'col-sm-4' %>
    <%= user_form.password_field :password, class: 'col-sm-8' %>
  </div>
  
  <%= user_form.fields_for :hospital, @hospital do |form| %>
  <div class="form-group row">
    <%= form.label :hospital_name, class: 'col-sm-4' %>
    <%= form.text_field :name, class: 'col-sm-8' %>
  </div>
  <div class="form-group row">
    <%= form.label :hospital_address, class: 'col-sm-4' %>
    <%= form.text_area(:address, cols: 40, rows: 3, class: 'col-sm-8') %>
  </div>
  <div class="form-group row">
    <%= form.label :hospital_type, class: 'col-sm-4' %>
    <%= form.radio_button('type', 'Hospital') %>
    <%= form.label :Hospital, class: 'col-sm-4' %>
    <%= form.radio_button('type', 'Clinic') %>
    <%= form.label :Clinic, class: 'col-sm-4' %>
  </div>
  <div class="form-group row">
    <%= form.label :Contact_number, class: 'col-sm-4' %>
    <%= form.number_field :contac_number, class: 'col-sm-8' %>
  </div>
  <div class="form-group row">
    <%= form.label :Website, class: 'col-sm-4' %>
    <%= form.url_field :website, class: 'col-sm-8' %>
  </div>
  <% end %>
  
  <div class="form-group row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <%= user_form.submit 'Become A Hospital' %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <% end %>
</div>
