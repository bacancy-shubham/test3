<%= form_with(model: @medicine, local: true) do |form| %>

<div class="form-group row">
  <%= form.label :name ,class: 'col-sm-4' %>
  <%= form.text_field :name ,class: 'col-sm-8' %>
</div>

<div class="form-group row">
  <%= form.label :price ,class: 'col-sm-4' %>
  <%= form.number_field :price ,class: 'col-sm-8' %>
</div>

<div class="form-group row">
  <%= form.label :quantity ,class: 'col-sm-4' %>
  <%= form.number_field :quantity ,class: 'col-sm-8' %>
</div>


<div class="form-group row">
  <div class="col-sm-4"></div> 
  <div class="col-sm-4"><%= form.submit 'Add Medicine', class: 'btn btn-success center'%></div>
  <div class="col-sm-4"></div> 
</div>
<% end %>

