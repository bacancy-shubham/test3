<%=render 'layouts/doctor_layout'%>
<div class="container">
  <h4>Edit Selected Avaibility</h4>
  <%= form_with(model: @selectdate, local: true) do |form| %>
    <div class="form-group row">
      <%= form.label :select_starting_date, class: 'col-sm-4' %>
      <%= form.date_select :starting_date %>
    </div>
    <div class="form-group row">
      <%= form.label :select_ending_date, class: 'col-sm-4' %>
      <%= form.date_select :ending_date %>
    </div>
    <div class="form-group row">
      <div class="col-sm-4"></div> 
        <div class="col-sm-4"><%= form.submit 'Edit Date', class: 'btn btn-success center'%></div>
      <div class="col-sm-4"></div> 
    </div>
<% end %>
</div>
